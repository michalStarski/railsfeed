= form_with model: @article, url: users_path, class: 'user-create-form', scope: 'user', local: true do |f| 
  = f.label :email, 'Email address'
  = f.email_field :email
  = f.label :name, 'Username'
  = f.text_field :name
  = f.label :password, 'Password'
  = f.password_field :password
  = f.label :repeat_password, 'Repeat password'
  = f.password_field :repeat_password
  = f.submit

