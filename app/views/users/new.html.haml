- if flash[:notice]
  - flash[:notice].each do |msg|
    %div= msg

= form_with model: @user, url: users_path, scope: 'user', local: true do |f| 
  = f.label :email, 'Email address'
  = f.email_field :email
  = f.label :name, 'Username'
  = f.text_field :name
  = f.label :password, 'Password'
  = f.password_field :password
  = f.label :password_confirmation, 'Repeat password'
  = f.password_field :password_confirmation
  = f.submit

